<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white"
  android:padding="@dimen/material_4dp">

  <ImageView
    android:id="@+id/gallery_folder_item_thumb_iv"
    android:layout_width="@dimen/material_120dp"
    android:layout_height="@dimen/material_120dp"
    android:layout_gravity="center"
    android:padding="@dimen/material_1dp"
    android:scaleType="centerCrop" />

  <ImageView
    android:id="@+id/gallery_folder_item_flag_iv"
    android:layout_width="@dimen/material_16dp"
    android:layout_height="@dimen/material_16dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/material_8dp"
    android:src="@drawable/checked" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/gallery_folder_item_thumb_iv"
    android:layout_alignTop="@id/gallery_folder_item_thumb_iv"
    android:layout_toLeftOf="@id/gallery_folder_item_flag_iv"
    android:layout_toRightOf="@id/gallery_folder_item_thumb_iv"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/gallery_folder_item_name_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:padding="@dimen/material_4dp"
      android:textColor="@android:color/black"
      android:textSize="@dimen/material_16sp"
      android:textStyle="bold"
      tools:text="文件名" />

    <TextView
      android:id="@+id/gallery_folder_item_count_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:padding="@dimen/material_4dp"
      android:textSize="@dimen/material_13sp"
      android:textStyle="italic"
      tools:text="32张" />
  </LinearLayout>

</RelativeLayout>