<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

  <ImageView
      android:id="@+id/preview_layout_cancel_iv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/material_16dp"
      android:layout_marginLeft="@dimen/material_16dp"
      android:tint="@android:color/white"
      android:src="@drawable/cancel"
  />

  <android.support.v4.view.ViewPager
      android:id="@+id/preview_layout_vp"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginTop="@dimen/material_8dp"
      android:layout_marginBottom="@dimen/material_8dp"
      android:layout_marginLeft="@dimen/material_4dp"
      android:layout_marginRight="@dimen/material_4dp"
      android:gravity="center"
  >
  </android.support.v4.view.ViewPager>

  <TextView
      android:id="@+id/preview_layout_index_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/material_16dp"
      android:layout_marginBottom="@dimen/material_16dp"
      android:layout_gravity="end"
      android:textSize="@dimen/material_21sp"
      android:textColor="@android:color/white"
      tools:text="1/8"
  />


</LinearLayout>