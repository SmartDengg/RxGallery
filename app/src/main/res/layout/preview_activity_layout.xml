<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/preview_layout_cancel_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_16dp"
    android:layout_marginTop="@dimen/material_16dp"
    android:src="@drawable/cancel"
    android:tint="@android:color/white" />

  <android.support.v4.view.ViewPager
    android:id="@+id/preview_layout_vp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="@dimen/material_8dp"
    android:layout_marginLeft="@dimen/material_8dp"
    android:layout_marginRight="@dimen/material_8dp"
    android:layout_marginTop="@dimen/material_8dp"
    android:layout_weight="1"
    android:gravity="center"
    android:overScrollMode="never" />

  <TextView
    android:id="@+id/preview_layout_index_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/material_16dp"
    android:layout_marginRight="@dimen/material_16dp"
    android:textColor="@android:color/white"
    android:textSize="@dimen/material_21sp"
    tools:text="1/9" />


</LinearLayout>